    "eslint-plugin-promise": "^5.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.8",
    "ts-jest": "^27.1.4",
    "typescript": "^4"
  },
  "engines": {
    "node": "16.x"
