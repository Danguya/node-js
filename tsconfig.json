{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2021",
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*":["*"],
      "@/tests/*":["../tests/*"]
    },
    "strict": true
  },
  "include": ["src", "tests"]
}
